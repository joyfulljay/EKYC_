@echo off
REM Navigate to the directory
cd "C:\Users\Naman's Beast\EKYC_"

REM Remove the existing requirements.txt file if it exists
if exist requirements.txt (
    echo Deleting existing requirements.txt...
    del requirements.txt
)

REM Compile a new requirements.txt from requirements.in
echo Compiling requirements.txt from requirements.in...
pip-compile requirements.in

REM Confirm completion
echo Compilation complete! requirements.txt has been updated.
pause
